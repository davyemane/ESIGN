<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('images/uiecc_logo.png') }}" type="image/x-icon">
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block script %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="bg-background dark:bg-background text-text dark:text-text">
		<header class="bg-bg-white dark:bg-background text-text dark:text-text fixed top-0 left-0 right-0 z-50">
			<nav
				class="container mx-auto px-4 py-5 flex items-center justify-between flex-wrap w-full">
				<!-- Logo -->

				<a href="{{path('app_home')}}" class="flex items-center text-main-green">
					<img id="logo-light" class="h-8 sm:h-10 md:h-12 lg:h-14 w-auto" src="{{ asset('icons/uiecc_logo.svg') }}" alt="{{ 'home_header.app.logo_alt'|trans }}">
					<img id="logo-dark" class="h-8 sm:h-10 md:h-12 lg:h-14 w-auto hidden" src="{{ asset('/images/uiecc_logo_dark.svg') }}" alt="{{ 'home_header.app.logo_alt'|trans }}">
				</a>


				<!-- Navigation Links - Hidden on mobile -->
				<div class="hidden md:flex space-x-4 md:space-x-20">
					<a href="{{path('app_home')}}" class="nav-link text-main-green hover:text-hover-green font-semibold">{{ 'home_header.nav.home'|trans }}</a>
					<a href="{{ path('app_home') }}#about-section" class="nav-link text-main-green hover:text-hover-green font-semibold">{{ 'home_header.nav.about'|trans }}</a>
					<a href="{{ path('app_home') }}#faq-section" class="nav-link text-main-green hover:text-hover-green font-semibold">{{ 'home_header.nav.faq'|trans }}</a>
				</div>

				<!-- Right side elements -->
				<div
					class="flex items-center space-x-4 md:space-x-6">
					<!-- Login and Register buttons - Hidden on mobile -->
					<div class="hidden md:flex space-x-4">
						<a href="{{path('app_login')}}" class="text-main-green bg-white border border-main-green rounded-md px-5 md:px-10 py-2 md:py-3 font-semibold hover:scale-105 transition-transform duration-75">{{ 'home_header.nav.login'|trans }}</a>
						<a href="{{path('app_register')}}" class="text-white bg-main-green rounded-md px-5 md:px-10 py-2 md:py-3 font-semibold hover:scale-105 transition-transform duration-75">{{ 'home_header.nav.register'|trans }}</a>
					</div>

					<!-- Dropdown menu -->
					<div class="relative">
						<button id="options-menu" class="text-main-green hover:text-hover-green focus:outline-none">
							<img src="icons/translation.svg" alt="Translation image" class="w-10 h-10">
						</button>
						<div id="dropdown-menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10">
							<div class="py-1">
								<ul>
									<li class="ml-2 py-1 px-1">
										<a href="{{ path('switch_language', {'locale': 'en'}) }}">{{ 'home_header.language.english'|trans }}</a>
									</li>
									<li class=" ml-2 py-1 px-1">
										<a href="{{ path('switch_language', {'locale': 'fr'}) }}">{{ 'home_header.language.french'|trans }}</a>
									</li>
								</ul>
							</div>
						</div>
					</div>

					<!-- Mobile menu button -->
					<button type="button" class="md:hidden text-main-green" id="mobile-menu-button">
						<svg class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
						</svg>
					</button>
				</div>
			</nav>

			<!-- Mobile menu -->
			<div class="hidden md:hidden w-full" id="mobile-menu">
				<div class="px-2 pt-2 pb-3 space-y-1 flex flex-col items-start">
					<a href="{{ path('app_home') }}" class="nav-link block px-3 py-2 rounded-md text-base font-semibold text-main-green hover:text-hover-green">{{ 'home_header.nav.home'|trans }}</a>
					<a href="{{ path('app_home') }}#about-section" class="nav-link block px-3 py-2 rounded-md text-base font-semibold text-main-green hover:text-hover-green">{{ 'home_header.nav.about'|trans }}</a>
					<a href="{{ path('app_home') }}#faq-section" class="nav-link block px-3 py-2 rounded-md text-base font-semibold text-main-green hover:text-hover-green">{{ 'home_header.nav.faq'|trans }}</a>
					<a href="{{ path('app_login') }}" class=" nav-link block px-3 py-2 rounded-md text-base font-semibold text-main-green hover:text-hover-green">{{ 'home_header.nav.login'|trans }}</a>
					<a href="{{ path('app_register') }}" class="nav-link block px-3 py-2 rounded-md text-base font-semibold text-main-green hover:text-hover-green">{{ 'home_header.nav.register'|trans }}</a>
				</div>
			</div>
		</header>

		<main class=" w-screen	"> {% block body %}{% endblock %}
			</main>

			<footer class="bg-background dark:bg-background text-text dark:text-text py-8">
				<div class="container mx-auto px-12 flex flex-col md:flex-row items-center justify-between">
					<a href="#" class="mb-4 md:mb-0">
						<img id="footer-logo-light" class="h-8 sm:h-10 md:h-12 w-auto" src="{{ asset('icons/uiecc_logo.svg') }}" alt="{{ 'home_header.app.logo_alt'|trans }}">
						<img id="footer-logo-dark" class="h-8 sm:h-10 md:h-12 w-auto hidden" src="{{ asset('/images/uiecc_logo_dark.svg') }}" alt="{{ 'home_header.app.logo_alt'|trans }}">
					</a>
					<ul class="flex space-x-20 mb-4 md:mb-0 text-main-green font-semibold">
						<li>
							<a href="{{ path('app_home') }}#hero-section" class="">{{ 'home_header.nav.home'|trans }}</a>
						</li>
						<li>
							<a href="{{ path('app_home') }}#about-section" class="hover:text-secondary">{{ 'home_header.nav.about'|trans }}</a>
						</li>
						<li>
							<a href="{{ path('app_home') }}#faq-section" class="hover:text-secondary">{{ 'home_header.nav.faq'|trans }}</a>
						</li>
					</ul>
					<p>{{ 'home_header.footer.copyright'|trans({'%year%': 'now'|date('Y')}) }}</p>
				</div>
			</footer>

			{% block javascripts %}
				{{ encore_entry_script_tags('app') }}
			{% endblock %}
			<script>
				// JavaScript for mobile menu toggle, theme toggle, and language toggle
document.addEventListener('DOMContentLoaded', function () {
const mobileMenuButton = document.getElementById('mobile-menu-button');
const mobileMenu = document.getElementById('mobile-menu');
const optionsMenu = document.getElementById('options-menu');
const dropdownMenu = document.getElementById('dropdown-menu');
const themeToggle = document.getElementById('theme-toggle');
const languageToggle = document.getElementById('language-toggle');
const themeText = document.getElementById('theme-text');
const languageText = document.getElementById('language-text');

// Mobile menu toggle
mobileMenuButton.addEventListener('click', () => {
mobileMenu.classList.toggle('hidden');
});

// Dropdown menu toggle
optionsMenu.addEventListener('click', () => {
dropdownMenu.classList.toggle('hidden');
});

// Close dropdown when clicking outside
document.addEventListener('click', (event) => {
if (! dropdownMenu.contains(event.target) && ! optionsMenu.contains(event.target)) {
dropdownMenu.classList.add('hidden');
}
});

// Theme toggle
themeToggle.addEventListener('click', () => {
document.documentElement.classList.toggle('dark');
const isDark = document.documentElement.classList.contains('dark');
themeText.textContent = isDark ? "{{ 'home_header.nav.toggle_light_mode'|trans }}" : "{{ 'home_header.nav.toggle_dark_mode'|trans }}";
setTheme(isDark);
});

// Language toggle
languageToggle.addEventListener('click', () => {
const currentLang = languageText.textContent;
const newLang = currentLang === 'EN' ? 'FR' : 'EN';
languageText.textContent = newLang;
// Here you would typically redirect to change the language
//
});

// Theme setting function
function setTheme(isDark) {
const logoLight = document.getElementById('logo-light');
const logoDark = document.getElementById('logo-dark');
const footerLogoLight = document.getElementById('footer-logo-light');
const footerLogoDark = document.getElementById('footer-logo-dark');

if (isDark) {
logoLight.classList.add('hidden');
logoDark.classList.remove('hidden');
footerLogoLight.classList.add('hidden');
footerLogoDark.classList.remove('hidden');
} else {
logoLight.classList.remove('hidden');
logoDark.classList.add('hidden');
footerLogoLight.classList.remove('hidden');
footerLogoDark.classList.add('hidden');
}
}

// Initialize theme based on system preference or previous setting
const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
const storedTheme = localStorage.getItem('color-theme');
if (storedTheme === 'dark' || (! storedTheme && prefersDark)) {
document.documentElement.classList.add('dark');
themeText.textContent = "{{ 'home_header.nav.toggle_light_mode'|trans }}";
setTheme(true);
}
});
			</script>
		</body>
	</html>
