{% extends 'base_login.html.twig' %}

{% block body %}

<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 mt-10">
    <div class="max-w-4xl w-full bg-white shadow-md rounded-lg p-8 mt-8">
        <h1 class="text-5xl font-bold text-center mt-8">Inscription</h1>
        <p class="text-center text-md mb-10">Cette section concerne les informations generale du candidat</p>
        
        <form id="registrationForm" action="#" method="post" enctype="multipart/form-data">
            <div class="mb-6">
                <label for="transaction_number" class="block text-md font-semibold text-gray-700">Numero de Transaction:</label>
                <input type="text" id="transaction_number" name="transaction_number" placeholder="Veuillez saisir le numero de transaction ex: 151287-123123213-23123" class="mt-1 p-4 block w-full shadow-sm sm:text-sm border border-gray-300 rounded-md focus:ring-main-green focus:border-main-green" required>
            </div>

            <div class="mb-6">
                <label for="payment_receipt" class="block text-md font-semibold text-gray-700">Document scannee du recu de paiment</label>
                <div class="mt-1 flex items-center">
                    <input type="file" id="payment_receipt" name="payment_receipt" class="hidden" accept="image/*,application/pdf" onchange="previewFile()">
                    <label for="payment_receipt" class="cursor-pointer bg-gray-50 border border-gray-300 rounded-md shadow-sm px-4 py-2 flex items-center">
                        <span>Cliquer Ici pour choisir le document</span>
                        <svg class="ml-2 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M8 9a3 3 0 006 0H8zM6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V4a2 2 0 00-2-2H6zm7 6a1 1 0 01-1 1H8a1 1 0 110-2h4a1 1 0 011 1z" />
                        </svg>
                    </label>
                </div>
            </div>

            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700">Apercu</label>
                <div id="previewContainer" class="mt-1 p-4 h-40 bg-green-50 rounded-md relative">
                    <p id="previewText" class="text-gray-500">Aucun fichier choisi</p>
                    <img id="previewImage" src="" alt="" class="hidden h-32 mx-auto">
                    <button type="button" class="absolute top-1 right-1 text-gray-500 hover:text-gray-700" onclick="clearFile()">
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>

            <div class="flex justify-between">
                <button type="button" class="bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">‹ Precedent</button>
                <button type="submit" class="bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" onclick="validateForm()">Sauvegarder</button>
                <button type="button" id="nextButton" class="bg-green-300 text-white py-2 px-4 rounded-md cursor-not-allowed" disabled>Suivant ›</button>
            </div>
        </form>

        <div class="mt-8 flex justify-center">
        <span class="ml-4 text-gray-500">Step 1 of 4</span>
            <div class="flex space-x-2">
                <div class="w-8 h-2 bg-green-500 rounded-full"></div>
                <div class="w-8 h-2 bg-gray-300 rounded-full"></div>
                <div class="w-8 h-2 bg-gray-300 rounded-full"></div>
                <div class="w-8 h-2 bg-gray-300 rounded-full"></div>
            </div>
            
        </div>
    </div>
</div>

<script>
    function previewFile() {
        const previewContainer = document.getElementById('previewContainer');
        const previewImage = document.getElementById('previewImage');
        const previewText = document.getElementById('previewText');
        const file = document.getElementById('payment_receipt').files[0];
        const reader = new FileReader();

        reader.addEventListener('load', function() {
            if (file.type.startsWith('image/')) {
                previewImage.src = reader.result;
                previewImage.classList.remove('hidden');
                previewText.classList.add('hidden');
            } else {
                previewText.textContent = file.name;
                previewText.classList.remove('hidden');
                previewImage.classList.add('hidden');
            }
        }, false);

        if (file) {
            reader.readAsDataURL(file);
        }
    }

    function clearFile() {
        document.getElementById('payment_receipt').value = '';
        document.getElementById('previewImage').src = '';
        document.getElementById('previewImage').classList.add('hidden');
        document.getElementById('previewText').textContent = 'Aucun fichier choisi';
        document.getElementById('previewText').classList.remove('hidden');
    }

    function validateForm() {
        const transactionNumber = document.getElementById('transaction_number').value;
        const paymentReceipt = document.getElementById('payment_receipt').files.length > 0;

        const nextButton = document.getElementById('nextButton');

        if (transactionNumber && paymentReceipt) {
            nextButton.classList.remove('cursor-not-allowed', 'bg-green-300');
            nextButton.classList.add('bg-green-500', 'hover:bg-green-600', 'focus:outline-none', 'focus:ring-2', 'focus:ring-offset-2', 'focus:ring-green-500');
            nextButton.disabled = false;
        } else {
            nextButton.classList.add('cursor-not-allowed', 'bg-green-300');
            nextButton.classList.remove('bg-green-500', 'hover:bg-green-600', 'focus:outline-none', 'focus:ring-2', 'focus:ring-offset-2', 'focus:ring-green-500');
            nextButton.disabled = true;
        }
    }

    document.getElementById('transaction_number').addEventListener('input', validateForm);
    document.getElementById('payment_receipt').addEventListener('change', validateForm);
</script>

{% endblock %}

