{% extends 'base.html.twig' %}

{% block title %}Aperçu des Informations du Candidat{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">
        <h1 class="text-2xl font-semibold text-center text-gray-900 mb-6">Aperçu des Informations du Candidat</h1>
        
        <div class="mb-6 flex justify-center">
          {% if candidate.photo %}
            <img src="{{ asset('uploads/photos/' ~ candidate.photo) }}" alt="Photo du candidat" class="rounded-full h-32 w-32 object-cover border-4 border-blue-500">
          {% else %}
            <div class="rounded-full h-32 w-32 bg-gray-300 flex items-center justify-center text-gray-500">
              <span class="text-4xl">?</span>
            </div>
          {% endif %}
        </div>

        <div class="space-y-4">
          <div class="bg-gray-50 px-4 py-3 sm:rounded-lg">
            <p class="text-sm font-medium text-gray-500">Nom</p>
            <p class="mt-1 text-sm text-gray-900">{{ candidate.name }}</p>
          </div>

          <div class="bg-gray-50 px-4 py-3 sm:rounded-lg">
            <p class="text-sm font-medium text-gray-500">Sexe</p>
            <p class="mt-1 text-sm text-gray-900">{{ candidate.sexe }}</p>
          </div>

          <div class="bg-gray-50 px-4 py-3 sm:rounded-lg">
            <p class="text-sm font-medium text-gray-500">Région</p>
            <p class="mt-1 text-sm text-gray-900">{{ candidate.region }}</p>
          </div>

          <div class="bg-gray-50 px-4 py-3 sm:rounded-lg">
            <p class="text-sm font-medium text-gray-500">Département</p>
            <p class="mt-1 text-sm text-gray-900">{{ candidate.depertement }}</p>
          </div>
        </div>

        <div class="mt-8">
          <a href="{{ path('app_candidate_generate_pdf', {'id': candidate.id}) }}" class="w-full flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            Télécharger la fiche d'inscription
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}