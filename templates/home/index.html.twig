			<h1 class="text-3xl lg:text-4xl xl:text-5xl font-bold mb-3">
				{{ "home_body.hero_section.welcome" | trans }}
			</h1>
			<p class="text-base lg:text-lg mb-6">
				{{ "home_body.hero_section.sub-text1" | trans }}
