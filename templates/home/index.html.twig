			<div class="flex space-x-8">
				<a href="{{path('app_register')}}"
					class="bg-main-green text-white px-10 py-3 font-semibold rounded-lg text-base hover:scale-105 transition duration-75">
					{{ "home_body.hero_section.register" | trans }}
				</a>
				<a href="{{path('app_login')}}"
					class="flex items-center text-main-green px-12 py-3 font-semibold rounded-lg border border-secondary-green hover:border-main-green text-base hover:scale-105 transition duration-75">
					{{ "home_body.hero_section.login" | trans }}
